<!-- logoexporter.njk -->
{% set title = ' â€“ Logo Export Tool' %}
{% set activePage = 'export-tool' %}
{% extends "templates/layout.njk" %}

{% block content %}

    {% include 'templates/partials/header.njk' %}

    <section class="hero hero-home no-pad-bot" id="index-banner">
    <div class="container">
      <h1 class="header">Logo Export Tool</h1>
      <p>Export Valassis and Valassis Digital logo variants at the size best suited to your needs.</p>
    </div>
  </section>

  <div class="container overview">
    <div class="row">
      <div class="col-md-3">
        <form id="svgForm">
          <div class="form-group">
            <label for="logoOption">Select a Logo Color</label>
            <select name="logoOption" id="logoOption" class="custom-select" autofocus>
              <option value="--">--</option>
              <optgroup label="Valassis">
                <option value="ValassisNavy">Valassis - Navy</option>
                <option value="ValassisWhite">Valassis - White</option>
              </optgroup>
              <optgroup label="Valassis Digital">
                <option value="ValassisDigitalNavy">Valassis Digital - Navy</option>
                <option value="ValassisDigitalWhite">Valassis Digital - White</option>
              </optgroup>
            </select>
          </div>
          <div class="form-group sizing hidden">
            <label for="logoWidth">Logo Width
              <div class="input-group">
                <input type="number" name="logoWidth" id="logoWidth" class="form-control form-control-sm" value="300"
                  min="90">
                <div class="input-group-append">
                  <span class="input-group-text">px</span>
                </div>
              </div>
            </label>
          </div>
          <!-- <div class="btn red-btn ml-0 sizing hidden" id="exportLogo" onclick="playGround();exportResizedSvg();">Generate</div> -->
        </form>
      </div>
      <div class="col-md-9">
        <div class="row">
          <span>Preview</span>
        </div>
        <div class="row">
          <div class="jumbotron col-sm-12">
            <div id="svgPreview"></div>
          </div>
        </div>
        <div id="download_wrapper" class="row hidden">

          <a href="data:" id="data" download="svg" class="btn btn-sm btn-primary-outline" target="_blank">Download
            PNG</a>
          <img src="" id="fromcanvas">
        </div>
        <div id="download_warning" class="row hidden">
          <span>Brand guidelines do not allow use of logos smaller than 90px wide.</span>
        </div>

      </div>
    </div>
  </div>
  <div class="page-nav-divider">
    <div class="container">
      <div class="row page-nav">
        <div class="text-left mr-auto previous">
          <a href="logo.html">
            <div class="icon arrow-backward float-left"></div>
            <p>Previous</p>
            <h5>Logo</h5>
          </a>
        </div>
        <div class="text-right next browser-default ml-auto">
          <a href="colors.html">
            <div class="icon arrow-forward float-right"></div>
            <p>Next</p>
            <h5>Colors</h5>
          </a>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
